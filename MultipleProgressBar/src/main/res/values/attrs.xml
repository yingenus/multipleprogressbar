<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MultipleProgressBar">
        <attr name="mpb_animate" format="boolean"/>
        <attr name="mpb_animationDuration" format="integer"/>
        <attr name="mpb_progressSize" format="dimension"/>
        <attr name="mpb_dividerSize" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="MultipleProgressBarItem">
        <attr name="mpb_progressColor" format="color"/>
        <attr name="mpb_secondaryProgressColor" format="color"/>
        <attr name="mpb_min" format="integer" />
        <attr name="mpb_max" format="integer" />
        <attr name="mpb_labelText" format="string"/>
        <attr name="mpb_showLabel" format="boolean"/>
        <attr name="mpb_labelGravity" format="enum">
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
            <enum name="adaptive" value="0"/>
        </attr>
        <attr name="mpb_labelColor" format="color"/>
        <attr name="mpb_progressText" format="enum">
            <enum name="percent" value="0"/>
            <enum name="raf" value="1"/>
        </attr>
        <attr name="mpb_progressTextColor" format="color"/>
        <attr name="mpb_showProgressText" format="boolean"/>
        <attr name="mpb_ProgressTextGravity" format="enum">
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
            <enum name="adaptive" value="0"/>
        </attr>
        <attr name="mpb_secondaryProgressTextColor" format="color"/>
        <attr name="mpb_showSecondaryProgressText" format="boolean"/>
        <attr name="mpb_progress" format="integer" />
        <attr name="mpb_secondaryProgress" format="integer" />
        <attr name="mpb_orientation" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>
    </declare-styleable>
</resources>